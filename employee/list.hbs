<div class="form-row">
    <div class="form-group col-md-6">
        <h3><a class="btn btn-secondary" href="/employee"><i class="fa fa-plus"></i> Create New</a> Employee List</h3>
    </div>
    <div class="form-group col-md-6">
        <form class="form-inline" action="/employee/list" method="get">
            <input type="text" class="form-control" name="search" placeholder="Search"> &nbsp;
            <a class="btn btn-secondary" href="/employee/list"> All</a> &nbsp;
            <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i> </button>
        </form>
    </div>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>City</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#if list.length}}
        {{#each list}}
        <tr>
            <td>{{this.fullName}}</td>
            <td>{{this.email}}</td>
            <td>{{this.mobile}}</td>
            <td>{{this.city}}</td>
            <td>
                <a href="/employee/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/employee/delete/{{this._id}}"
                    onclick="return confirm('Are you sure to delete this record?');"><i class="fa fa-trash fa-lg"
                        aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
        {{else}}
        <tr>
            <td colspan="5">No records found.</td>
        </tr>
        {{/if}}
    </tbody>
</table>